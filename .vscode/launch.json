{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend: Run Vite Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev -- --host localhost --port 5173 --strictPort",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Frontend: Run + Debug in Chrome",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev -- --host localhost --port 5173 --strictPort",
      "cwd": "${workspaceFolder}/frontend",
      "serverReadyAction": {
        "pattern": "Local:\\s+(https?://\\S+)",
        "action": "debugWithChrome",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/frontend"
      }
    },
    {
      "name": "Frontend: Attach Chrome (5173)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ]
}